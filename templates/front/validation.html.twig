{% extends 'front-base.html.twig' %}
{% block title 'Your Cart' %}
{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{ asset('styles/categories_styles.css')}}">
  <link rel="stylesheet" type="text/css" href="{{ asset('styles/categories_responsive.css')}}">
{% endblock %}
{% set totalET = 0 %}

{% block body %}

	<div class="fs_menu_overlay"></div>
    <div class="container product_section_container">
		<div class="row">
       
                
				<div class="span9">
                    <h2>Validate your cart</h2>
                    <form>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total excl tax</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for m in mangas %}
                            <tr>
                                <td>{{m.title}}</td>
                                <td>
                                    {{cart[m.id]}}
                                </td>
                                <td>{{m.price}} </td>
                                <td>{{cart[m.id]* m.price}}</td>
                            </tr>
                            {% set totalET = (cart[m.id]* m.price) + totalET %}
                          {% endfor %}   
                        </tbody>
                    </table>
                </form>
    
                <dl class="dl-horizontal pull-right">
                    <dt>Total excl tax :</dt>
                    <dd>{{totalET}}</dd>
                    
                    <dt>VAT(%) :</dt>
                    <dd>200â‚¬</dd>
    
                    <dt>Total amount :</dt>
                    <dd>{{totalET *(1.1)}}</dd>
                </dl>
                <div class="clearfix"></div>
                
            </div>
		
		</div>
        
	</div>
    <div class="tabs_section_container">

		<div class="container">
			<div class="row">
            {{ form_start(form)}}
               {{ form_rest(form)}}
                <button class="btn btn-primary"><a href="{{  path('home.index')  }}" ></a>{{button|default('Validate')}} </button>
             {{ form_end(form)}}
            </div>
        </div> 
    </div>
    </div>
<hr />
{% endblock %}